<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="shortcut icon" href="<%=CONSTANTS[:base_url]%>favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=@locals[:title]%></title>
    <script type="text/javascript">
      var BASE_URL = "<%= CONSTANTS[:base_url] %>";
      var STATICS_URL  = "<%= CONSTANTS[:static_url] %>";
      var DATA = null;
      var CSRF = "<%= CONSTANTS[:csrf][:secret] %>";
      var CSRF_KEY = "<%= CONSTANTS[:csrf][:key] %>";
      var UPLOAD = "<%= CONSTANTS[:upload][:url] %>";
      var LANG = "sp";
    </script>
    <%= load_css %>
  </head>
  <body>
    <label id="defaultTargetMensajes"></label>
    <!-- Inicio modal -->
    <button type="button" class="btn btn-primary btn-lg oculto" data-toggle="modal" data-target="#modal-container" data-backdrop="static"  data-backdrop="static" id="btnModal">Launch demo modal</button>
    <div class="modal fade" id="modal-container" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Fin modal -->
    <div id="app">
      <header>
        <a href="<%= CONSTANTS[:base_url] %>">Inicio</a>
        <a href="<%= CONSTANTS[:base_url] %>ayuda">Ayuda</a>
        <a href="<%= CONSTANTS[:base_url] %>view" class="pull-right">Pepe Valdivia</a>
        <a href="<%= CONSTANTS[:base_url] %>close" class="pull-right">Cerrar Sesión</a>
      </header>
      <nav>
        <h1><i class="fa fa-futbol-o h1" aria-hidden="true"></i>Administración de Canchas</h1>
        <%== @locals[:html_modules] %>
      </nav>
      <div id="body-app" class="row">
        <aside class="col-md-2">
          <%== @locals[:html_items] %>
        </aside>
        <section class="col-md-10" id="workspace">
          <!-- Inicio Yield-->
          <%= yield %>
          <!-- Fin Yield-->
        </section>
      </div>
      <footer>
        <p>Powered by: <a href="http://softweb.pe/">Software Web Perú</a> © 2011-2018 </p>
      </footer>
    </div>
    <%= load_js %>
  </body>
</html>
