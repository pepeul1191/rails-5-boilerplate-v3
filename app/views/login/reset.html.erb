<form class="form-signin" action="<%= CONSTANTS[:base_url] %>login/reset_password" method="post">
  <a href="<%= CONSTANTS[:base_url] %>">
    <img src="<%= CONSTANTS[:static_url] %>assets/img/logo.png" height="130" width="240" class="mb-4 brand" alt="Canchas-Login">
  </a>
  <h1 class="h3 mb-3 font-weight-normal"><%= @locals[:contents]['form_title'] %></h1>
  <input type="hidden" disabled name="<%= CONSTANTS[:csrf][:key] %>" value="<%= CONSTANTS[:csrf][:secret] %>">
  <!--EMAIL -->
  <label for="email" class="sr-only">Email</label>
  <input type="email" id="email" class="form-control" placeholder="<%= @locals[:contents]['placeholder_email'] %>" required="" autofocus="" name="email">
  <!--MESSAGE-->
  <p class="<%= @locals[:message_type] %> message" id="login-message" style="margin-top: 15px;"><%= raw(@locals[:message]) %></p>
  <!--BUTTON -->
  <button class="btn btn-lg btn-primary btn-block" type="submit">
    <%= @locals[:contents]['button'] %>
  </button>
  <!--FooTER LOGIN NAV -->
  <div class="link-login">
    <a href="<%= CONSTANTS[:base_url] %>login">
      <%= @locals[:contents]['login'] %>
    </a>
  </div>
  <p class="mt-5 mb-3 text-muted">Powered By <a href="http://softweb.pe/"> Softtware Web Perú</a> © 2017-2018</p>
</form>
